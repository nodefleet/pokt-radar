generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model blocks {
  id               Int       @id @default(autoincrement())
  hash             String?   @db.Char(64)
  height           Int?
  time             DateTime? @db.Timestamp(6)
  proposer_address String?   @db.Char(40)
  tx_count         Int?
  tx_total         Int?
}

model transactions {
  id               Int      @id @default(autoincrement())
  hash             String?  @db.Char(64)
  from_address     String?  @db.Char(40)
  to_address       String?  @db.Char(40)
  app_pub_key      String?  @db.Char(64)
  blockchains      String?
  message_type     String?
  height           Int?
  index            Int?
  stdtx            Json?
  tx_result        Json?
  tx               String?
  entropy          BigInt?
  fee              Int?
  fee_denomination String?  @db.VarChar(5)
  amount           Decimal? @db.Decimal
}

model accounts {
  id                   Int      @id @default(autoincrement())
  address              String?  @db.Char(40)
  height               Int?
  account_type         String?
  balance              Decimal? @db.Decimal
  balance_denomination String?  @db.VarChar(5)
}

model apps {
  id            Int      @id @default(autoincrement())
  address       String?  @db.Char(40)
  height        Int?
  jailed        Boolean?
  public_key    String?  @db.Char(64)
  staked_tokens Decimal? @db.Decimal
}

model nodes {
  id          Int      @id @default(autoincrement())
  address     String?  @db.Char(40)
  height      Int?
  jailed      Boolean?
  public_key  String?  @db.Char(64)
  service_url String?
  tokens      Decimal? @db.Decimal
}
